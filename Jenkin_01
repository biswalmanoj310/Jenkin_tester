pipeline {
  agent any
  stages {
    stage('Prepare') {
      steps {
        echo "I am preperating"
      }
    }
    stage('Checkout') {
      steps {
        parallel(
          evo :{
            echo "Checking Out Evo"
          },
          Junos :{
            echo "Checking Out Junow"
          },
          UI :{
            echo "Checking Out Junow"
          },

        )
        echo "I am checking out code"
      }
    }
    stage('TVP Checkout') {
      steps {
        echo "I am checking out tvp"
      }
      
    }
    stage('Checkout Status') {
      steps {
        echo "Checkout Status"
      }

    }
    stage('UI Build and Publish') {
      steps {
        echo "UI Build and Publish"
      }

    }
    stage('BUILDS') {
      steps {

        parallel(
          Component_Publish :{
            echo "Checking Out Evo"
          },
          EVO_Build :{
            echo "Checking Out Junow"
          },
          Junos_Build :{
            echo "Checking Out Junow"
          },
          tvp_pre-aft :{
            echo "Checking Out Junow"
          },


        )
      }

    }
    stage('Pub AFT and ULC and Evo Push') {
      steps {
        echo "I am checking out tvp"
      }

    }
    stage('Junos/TVP Pointer Update') {
      steps {
        echo "I am checking out tvp"
      }

    }
    stage('Parallel') {
      steps {
        Parallel(
        
          EVO Publish :{
            echo "Checking Out Junow"
          },
           Junos Re-Package :{
            echo "Checking Out Junow"
          },
           tvp post-aft :{
            echo "Checking Out Junow"
          },
        )
      }

    }
    stage('Junos/TVP Pointer Commit') {
      steps {
        echo "I am checking out tvp"
      }

    }
    stage('Image Copy') {
      steps {
        echo "I am checking out tvp"
      }

    }
    stage('CI Sanities') {
      steps {
        echo "I am checking out tvp"
      }

    }
    stage('Archive') {
      steps {
        echo "I am checking out tvp"
      }

    }
    stage('Final Status') {
      steps {
        echo "I am checking out tvp"
      }

    }

  }

  post {
    always{
      echo "Always say: Ram Ram Ram"
    }

    success {
      echo "----------------------"
      echo "ONLY on SUCCESS"
    }

    failure {
      echo "----------------------"
      echo "ONLY on failure"
    }


    unstable {
      echo "----------------------"
      echo "ONLY on unstable"
    }

    changed {
      echo "----------------------"
      echo "ONLY on status change"
    }

  }

}
